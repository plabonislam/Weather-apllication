
<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if nosuccess}}hidden{{/if}}>
            {{ success }}
        </div>
    </div>
</div>

{{# each products}}
<div class="row">
    {{#each this}}
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
        
            <img src="/images/{{ this.imagePath}} ">
            <div class="caption">
                <h3>{{ this.title}}</h3>
                <p class="description">{{ this.description}}</p>
                <div class="clearfix">
                    <div class="price pull-left">{{ this.price}}</div>
                    <a href="#" class="btn btn-success pull-right" role="button">Add To Cart</a>
                </div>
            </div>
        </div>
        </div>
        {{/each}}
    </div>
{{/each}}


 
 
    

